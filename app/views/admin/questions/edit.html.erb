<h2>問題の編集</h2>

<%= form_with model: @question, url: admin_question_path, local:true do |f| %>

  <table class='table table-hover table-inverse'>
    <tr>
      <td>問題</td>
      <td><%= f.text_field :question %></td>
    </tr>
                
    <tr>
      <td>選択肢１</td>
      <td><%= f.text_field :choice_1 %></td>
    </tr>
  
    <tr>
      <td>選択肢２</td>
      <td><%= f.text_field :choice_2 %></td>
    </tr>
    
    <tr>
      <td>正解の選択肢</td>
      <td><%= f.text_field :choice_2 %></td>
    </tr>
    
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
    </tr>

　</table>
　
  <div class="form-group">
    <%= f.submit "変更を保存", class:"btn btn-success"%>
  </div>
<% end %>
               
<%= link_to"問題詳細へ戻る",admin_question_path %>