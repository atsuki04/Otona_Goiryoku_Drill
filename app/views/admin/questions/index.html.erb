<h2 class="m-5">問題一覧</h2>

<%= render 'shared/search', keyword: @keyword, questions: @filtered_questions %>

<% @questions.each do |question| %>

  <table class='table table-hover table-inverse m-5 text-center'>
    <thead>
      <tr>
        <th class="col-4">ジャンル</th>
        <th class="col-8">問題</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= question.genre.name %></td>
        <td><%= link_to question.question, admin_question_path(question) %></td>
      </tr>
    </tbody>
  </table>

<% end %>