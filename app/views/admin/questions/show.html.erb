<h2 class="m-5">問題の詳細</h2>

<div class="container m-5">
  <h4>問題</h4>
  <%= @question.question %>
  <h4>ジャンル</h4>
  <%= @question.genre.name %>
  <h4>選択肢１</h4>
  <%= @question.choice_1 %>
  <h4>選択肢２</h4>
  <%= @question.choice_2 %>
  <h4>正解の選択肢</h4>
  <%= @question.choice_answer %>
  <h4>解説</h4>
  <%= @question.explanation %>
</div>
  
<div class="text-center mr-5">  
  <%= link_to"編集する",edit_admin_question_path(@question), class:"btn btn-success"%>
</div>