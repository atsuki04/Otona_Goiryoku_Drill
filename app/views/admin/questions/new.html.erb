<h2 class="m-5">問題作成</h2>
<table class="table table-hover table-bordered table-inverse">
  <%= form_with model: @question, url: admin_questions_path, local:true do |f| %>
    <div class="text-center m-3 p-3">
      <%= f.text_area :question ,placeholder: "問題" %>
    </div>
    <div class="text-center m-3 p-3">
      <%= f.text_field :choice_1 ,placeholder: "選択肢1" %>
    </div>
    <div class="text-center m-3 p-3">
      <%= f.text_field :choice_2 ,placeholder: "選択肢2" %>
    </div>
    <div class="text-center m-3 p-3">
      <%= f.text_field :choice_answer ,placeholder: "正解の選択肢" %>
    </div>
    <div class="text-center m-3 p-3">
      <%= f.text_area :explanation ,placeholder: "解説" %>
    </div>
    <div class="text-center m-3 p-3">  
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
    <div class="text-center m-3 p-3">
      <%= f.submit "作成する", class: "btn btn-success" %>
    </div>  
  <% end %>
</table>