<div class='container px-5'>
  <div class='row'>
    <div class='col-md-12 m-5'>
      <h2>ジャンル一覧・追加</h2>
  
      <table class='table table-hover table-inverse mb-5'>
        <%= form_with model: @genre, url: admin_genres_path , local:true do |f| %>
          <table class='table table-hover table-inverse'>
            <div class="form-group">
              <td>ジャンル</td>
              <td><%= f.text_field :name, :class =>'form-control genre_name' %></td>
              <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
            </div>
          </table>
        <% end %>
      </table>
      
      <table class='table table-hover table-inverse mt-5'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to"編集する",edit_admin_genre_path(genre.id) ,class:"btn btn-sm btn-success"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>