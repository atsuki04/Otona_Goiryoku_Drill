<h5 class="mt-4 text-center">
  <% if customer_signed_in? %>
    <div id="favorite_buttons_<%= @question.id %>">
      <%= render 'shared/favorite', question: @question %>
    </div>  
  <% end %>
</h5>

<div class="container p-2 pb-5">
  <h3 class="m-3 p-3 text-center"><解答></h3>
  <h5 class="border border-danger text-center px-2 py-4">
  <%= @question.choice_answer %>
  </h5>
</div>

<div class="container mt-5 pt-2 pb-5">
  <h3 class="m-3 p-3 text-center"><解説></h3>
  <h5 class="border border-primary text-center px-2 py-4">
　  <%= @question.explanation %>
　</h5>
</div>
<div class="mt-5 text-center">
<%= link_to "次へ", questions_path(genre: @question.genre.name, que_id: @que_id), class:"btn btn-lg btn-success" %>
</div>