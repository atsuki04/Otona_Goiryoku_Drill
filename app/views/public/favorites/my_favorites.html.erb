<div class='container px-5 px-sm-0 pt-5 pb-5'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <h2>お気に入りクイズ一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>お気に入り</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @favorites.each do |favorite| %>
            <tr>
              <td><%= favorite.question.question %></td>
              <td><%= favorite.question.choice_answer %></td>
              <td><%= favorite.question.explanation %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>