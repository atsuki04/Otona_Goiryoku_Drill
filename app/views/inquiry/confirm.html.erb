<div class="container text-center">
  <h1 class="m-2">お問合せ内容の確認</h1>
  
  <%= form_with model: @inquiry, url: inquiry_thanks_path, local:true do |f| %>
    <table class="table">
      <tr>
        <th>名前</th>
        <td>
         <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <th>お問合せ内容</th>
        <td>
          <%= f.hidden_field :message %>
          <%= simple_format(@inquiry.message) %>
        </td>
      </tr>
    </table>
    <%= f.submit "送信", class: "btn btn-primary" %>
  <% end %>  
</div> 