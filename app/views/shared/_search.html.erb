
<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<div class="question-list">
  <% questions.each do |question| %>
    <%= question.genre.name %>
    <%= question.question  %>
    <%= question.choice_answer %>
  <% end %>
</div>